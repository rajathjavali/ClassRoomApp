<?xml version="1.0"?>

<RelativeLayout tools:context=".MainActivity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin" android:layout_height="match_parent"
    android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/board"
    android:layout_gravity="center_horizontal">
    <ScrollView android:layout_height="450dp"
        android:layout_width="300dp" android:id="@+id/scroll"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="fill_parent" android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="30dp"
                android:text="Profile"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:id="@+id/profile"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"/>


            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/name"
                android:hint="NAME"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:layout_marginTop="30dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/sname"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:hint="SHORT NAME"
                android:layout_marginTop="50dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/id"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:hint="ID"
                android:layout_marginTop="50dp"
                android:textSize="20dp"/>


            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/emailid"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:hint="Email ID"
                android:layout_marginTop="50dp"
                android:textSize="20dp"/>


            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/phno"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:hint="Ph No"
                android:layout_marginTop="50dp"
                android:textSize="20dp"/>
            <Button
                style="?android:buttonBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit"
                android:text="Edit"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:background="#0000"
                android:layout_marginTop="30dp"
                android:onClick="edit"
                android:layout_gravity="center_horizontal"/>


        </LinearLayout>

    </ScrollView>



</RelativeLayout>

